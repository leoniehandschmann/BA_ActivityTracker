<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/evaluation_layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/activity_name_layout"
        android:layout_gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/activity_name"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Aktivität"/>
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/delete_btn"
            android:src="@drawable/delete_button_selector"
            android:focusable="true"
            android:tooltipText="Wenn diese Aktivität irrelevant ist, lösche diese Bitte aus der Ansicht!"
            android:backgroundTint="@color/white"/>

    </LinearLayout>


    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:max="6"
        android:layout_gravity="center"
        android:progress="3"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekbar_label_layout"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sad_smiley"
            android:layout_marginLeft="8dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/neutral_smiley"
            android:layout_marginLeft="137dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/happy_smiley"
            android:layout_marginLeft="140dp"/>
    </LinearLayout>




</LinearLayout>